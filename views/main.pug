html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet" type="text/css" href="/snake.css")
        link(rel='shortcut icon' type='image/png' href='/Images/l.png')
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet")

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        
        title Rattlesnek - Play

    script.
        var highscore=parseInt('!{highscore}')
        var prefApple='!{prefApple}'
        var id='!{name}'
        window.addEventListener("keydown", function(e) {
        if(["Space","ArrowUp","ArrowDown","ArrowLeft","ArrowRight"].indexOf(e.code) > -1) {
                e.preventDefault();
            }
        }, false);
    body
        .upper
            img#logo(src="/Images/l.png" width="50px" height="50px" style="position:relative;top:10px")
        .main
            .eitherSides
                a(href="/leaderboard" target="_blank")
                    .tabs#leaderboard
                        span Leaderboard
                .tabs#settings(style="height:auto")
                    span Settings
                    #actualSettings
                        span.subs Change Apple
                        div#applePref
                            input.appleSelection#default(type="radio" name="appleSelection")
                            img(src="/Images/default.png" width="20px" height="20px" style="position:relative;top:3px")
                            span(style='font-size:20px;position:relative;top:-5px') &nbsp;default
                            br
                            input.appleSelection#apple(type="radio" name="appleSelection")
                            img(src="/Images/apple.png" width="20px" height="20px" style="position:relative;top:3px")
                            span(style='font-size:20px;position:relative;top:-5px') &nbsp;apple
                        
                        br
                        span.subs Audio
                        br
                        input#music(type="checkbox" checked)
                        span.subs Music
                        br
                        input#sounds(type="checkbox" checked)
                        span.subs Sounds
                        br
                        br
                        span.subs Music Volume
                        br
                        input#vol(type="range" min="0" max="10"  value="2")
                        br

                    
                .tabs#logout
                    span Log out
                #miscBox.scoreUpdates
                    span#highscore Highscore: #{highscore}
                    br
                    span#score Score: n/a
                    br
                    span#logs ....
            div
                canvas#cvs
            .eitherSides
                #miscBox(style="text-align: left;")
                    ul
                        li 
                            span#ins1 Press the start button or press space to play
                        li 
                            span#ins2 Use arrow keys or WASD to move
                        li 
                            span#ins3 Collect apples and keep the doctor away ;)
                        li 
                            span#ins4 You can press space to pause
                        li 
                            span#ins5 Enjoy!

        .bottom
            .buttonHolder
                button.controls#play(style="width:100px") Start
            h1(style="text-align:center") Cannot play on touch devices!
            
            br
            //- .buttonHolder
            //-     button.controls#up
            //-         img(src="/Images/arrowUp.png" height="14px" width="19px")
            //- .buttonHolder
            //-     button.controls#left(style="position:relative; top:2px;right:2px")
            //-         img(src="/Images/arrowLeft.png" height="19px" width="14px")
            //-     button.controls#down
            //-         img(src="/Images/arrowDown.png" height="14px" width="19px")
            //-     button.controls#right(style="position:relative; top:2px;left:2px")
            //-         img(src="/Images/arrowRight.png" height="19px" width="14px")
            //- .buttonHolder
                
        include ./footer.pug
        
        audio#bg(loop)
            source#bgm(src="/Audio/bgMusic.mp3")
        audio#go
            source(src="/Audio/gameOver.mp3")
        audio#pu
            source(src="/Audio/pickUp.mp3")

        script(src="/snake.js")
